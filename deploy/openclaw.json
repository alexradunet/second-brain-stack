{
  "agents": {
    "defaults": {
      "workspace": "/home/node/.openclaw/workspace",
      "model": {
        "primary": "anthropic/claude-opus-4-6",
        "fallbacks": ["kimi-coding/k2p5"]
      },
      "models": {
        "anthropic/claude-opus-4-6": { "alias": "Claude" },
        "kimi-coding/k2p5": { "alias": "Kimi" }
      },
      "compaction": { "mode": "safeguard" },
      "maxConcurrent": 4,
      "subagents": { "maxConcurrent": 8 },
      "sandbox": {
        "mode": "non-main",
        "scope": "session",
        "workspaceAccess": "none",
        "docker": {
          "binds": ["/srv/nazar/vault:/vault:rw"],
          "network": "none",
          "memory": "1g",
          "cpus": 1,
          "user": "1000:1000"
        },
        "prune": { "idleHours": 24, "maxAgeDays": 7 }
      }
    }
  },
  "tools": {
    "sandbox": {
      "tools": {
        "allow": ["exec", "process", "read", "write", "edit", "sessions_list", "sessions_history"],
        "deny": ["browser", "canvas", "nodes", "cron", "discord", "gateway"]
      }
    }
  },
  "gateway": {
    "port": 18789,
    "bind": "loopback",
    "auth": { "mode": "token" },
    "tailscale": { "mode": "serve" }
  },
  "channels": {
    "whatsapp": {
      "dmPolicy": "pairing"
    }
  },
  "messages": {
    "ackReactionScope": "group-mentions"
  }
}
